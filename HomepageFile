    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const servicesData = [
                { id: 'vacuuming', name: 'Vacuuming', icon: 'üí®' },
                { id: 'mopping', name: 'Mopping', icon: 'üíß' },
                { id: 'toilets', name: 'Toilet Cleaning', icon: 'üöΩ' },
                { id: 'dusting', name: 'Dusting', icon: '‚ú®' },
                { id: 'windows', name: 'Windows (Inside)', icon: 'ü™ü' },
                { id: 'bins', name: 'Bin Emptying', icon: 'üóëÔ∏è' }
            ];

            const servicesContainer = document.getElementById('services-container');
            const hoursInput = document.getElementById('hours');
            const weeklyCostEl = document.getElementById('weekly-cost');
            const monthlyCostEl = document.getElementById('monthly-cost');
            const enquiryForm = document.getElementById('enquiry-form');
            const formContainer = document.getElementById('form-container');
            const thankYouMessage = document.getElementById('thank-you-message');

            const HOURLY_RATE = 37;

            const renderServices = () => {
                servicesContainer.innerHTML = '';
                servicesData.forEach(service => {
                    const card = document.createElement('div');
                    card.className = 'service-card cursor-pointer p-4 border-2 border-gray-200 rounded-lg text-center bg-white hover:border-blue-400';
                    card.dataset.id = service.id;
                    card.innerHTML = `
                        <div class="text-3xl">${service.icon}</div>
                        <div class="mt-2 font-medium text-sm">${service.name}</div>
                    `;
                    servicesContainer.appendChild(card);
                });
            };
            
            const calculateQuote = () => {
                const hours = parseFloat(hoursInput.value) || 0;
                const weeklyCost = hours * HOURLY_RATE;
                const monthlyCost = weeklyCost * 4.33; 

                weeklyCostEl.textContent = `$${weeklyCost.toFixed(2)}`;
                monthlyCostEl.textContent = `(approx. $${monthlyCost.toFixed(2)} / month)`;
            };
            
            enquiryForm.addEventListener('submit', function(event) {
                event.preventDefault();

                const name = document.getElementById('name').value;
                const email = document.getElementById('email').value;
                const phone = document.getElementById('phone').value;
                const message = document.getElementById('message').value;
                const targetEmail = 'Antony.Rajan@bestofcleans.co.nz';
                const subject = `New Cleaning Enquiry from ${name} via Website`;
                
                let body = `A new enquiry has been submitted:\n\n`;
                body += `Name: ${name}\n`;
                body += `Email: ${email}\n`;
                body += `Phone: ${phone || 'Not provided'}\n\n`;
                body += `Message:\n${message}`;

                const mailtoLink = `mailto:${targetEmail}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
                
                formContainer.classList.add('hidden');
                thankYouMessage.classList.remove('hidden');
                
                window.location.href = mailtoLink;
            });


            servicesContainer.addEventListener('click', (e) => {
                const card = e.target.closest('.service-card');
                if (card) {
                    card.classList.toggle('selected');
                }
            });

            hoursInput.addEventListener('input', calculateQuote);

            renderServices();
            calculateQuote();
        });
    </script>
</body>
